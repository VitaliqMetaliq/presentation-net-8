{
  "AuthSettings": {
    "Issuer": "https://localhost:7005",
    "Audience": "true-code-microservices-audience",
    "Secret": "strong-secret-for-local-development-12345678"
  },
  "GrpcAddress": "http://localhost:7030",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Yarp": "Debug",
        "Microsoft.ReverseProxy": "Debug",
        "Grpc": "Debug",
        "Grpc.AspNetCore.Server": "Debug"
      }
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "user_routes": {
        "ClusterId": "user_cluster",
        "Match": {
          "Path": "/api/user/{**placeholder}"
        },
        "Transforms": [
          { "PathPattern": "/{**placeholder}" }
        ]
      },
      "finance_routes": {
        "ClusterId": "finance_cluster",
        "AuthorizationPolicy": "RequireAuthenticatedUser",
        "Match": {
          "Path": "/api/finance/{**placeholder}"
        },
        "Transforms": [
          { "PathPattern": "/{**placeholder}" }
        ]
      }
    },
    "Clusters": {
      "user_cluster": {
        "Destinations": {
          "user_destination": {
            "Address": "https://localhost:7005"
          }
        }
      },
      "finance_cluster": {
        "Destinations": {
          "finance_destination": {
            "Address": "http://localhost:8080"
          }
        }
      }
    }
  }
}
